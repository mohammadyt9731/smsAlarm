<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tilPhoneNumber"
        app:layout_constraintLeft_toLeftOf="@id/tilPhoneNumber"
        app:layout_constraintRight_toRightOf="@id/tilPhoneNumber" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/phoneNumber"
        android:paddingRight="8dp"
        app:boxStrokeColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvLastPhoneNumberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:text="@string/lastPhoneNumber"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@id/tilPhoneNumber"
        app:layout_constraintTop_toBottomOf="@id/tilPhoneNumber" />

    <TextView
        android:id="@+id/tvLastPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:gravity="right"
        android:text="@string/samplePhoneNumber"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tvLastPhoneNumberTitle"
        app:layout_constraintLeft_toLeftOf="@id/tilPhoneNumber"
        app:layout_constraintRight_toLeftOf="@id/tvLastPhoneNumberTitle"
        app:layout_constraintTop_toTopOf="@id/tvLastPhoneNumberTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="8dp"
        android:text="@string/verify"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:backgroundTint="@color/purple_700"
        app:cornerRadius="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLastPhoneNumber" />


</androidx.constraintlayout.widget.ConstraintLayout>