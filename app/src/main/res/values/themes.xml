<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmsAlarm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="switch_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:checked">true</item>
        <item name="android:theme">@style/slider_theme</item>
        <item name="android:gravity">right|center</item>
        <item name="android:layout_marginRight">@dimen/_8sdp</item>
        <item name="android:layout_marginLeft">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
    </style>

    <style name="slider_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorControlActivated">@color/dark_blue</item>
        <item name="colorPrimary">@color/dark_blue</item>
    </style>

    <!--bottomSheetAddMention-->
    <style name="text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="expandedHintEnabled">false</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="errorTextAppearance">@color/gray</item>
        <item name="hintTextAppearance">@style/label_text_style</item>
        <item name="boxStrokeColor">@color/bg_gray_dark_blue</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="label_text_style" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="tv_hint_style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_height">@dimen/_38ssp</item>
        <item name="android:padding">@dimen/_4ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor</item>
    </style>

    <style name="custom_bottom_sheet_dialog_theme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/custom_bottom_sheet_style</item>
    </style>

    <style name="custom_bottom_sheet_style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:layoutDirection">rtl</item>
    </style>

</resources>